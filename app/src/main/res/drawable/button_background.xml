<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- negro con más opacidad -->
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFFFF" /> <!-- borde blanco al presionar -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- negro con baja opacidad -->
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#AAFFFFFF" /> <!-- borde blanco translúcido -->
        </shape>
    </item>

</selector>
