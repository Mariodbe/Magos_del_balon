<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Parte izquierda: perfil -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E0E0E0"
        android:padding="16dp">

        <!-- Cuadrado del perfil -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile" />

        <!-- Nombre o informaci贸n adicional del perfil -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Perfil"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

        <!-- Bot贸n de configuraci贸n -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="16dp"
            android:contentDescription="Configuraci贸n" />

    </LinearLayout>

    <!-- Parte derecha: 4 cuadrados para ligas -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cuadrado de liga 1 -->
            <LinearLayout
                android:id="@+id/liga_layout_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#B0BEC5"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btn_create_liga_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Crear Liga"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/liga_1_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga 1"
                    android:textSize="14sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Cuadrado de liga 2 -->
            <LinearLayout
                android:id="@+id/liga_layout_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#B0BEC5"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btn_create_liga_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Crear Liga"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/liga_2_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga 2"
                    android:textSize="14sp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cuadrado de liga 3 -->
            <LinearLayout
                android:id="@+id/liga_layout_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#B0BEC5"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btn_create_liga_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Crear Liga"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/liga_3_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga 3"
                    android:textSize="14sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Cuadrado de liga 4 -->
            <LinearLayout
                android:id="@+id/liga_layout_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#B0BEC5"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btn_create_liga_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Crear Liga"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/liga_4_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga 4"
                    android:textSize="14sp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
