<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_entrenamiento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/progressBarEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginBottom="16dp"
        />

    <ListView
        android:id="@+id/listViewJugadores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonEntrenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrenar Jugadores"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@null"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background_principal"
        android:padding="12dp"/>
</LinearLayout>