<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadioFragment">

    <ImageButton
        android:id="@+id/btn_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back to Home"
        android:src="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_estadio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_estadio"
        android:contentDescription="Estadio de Fútbol"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_to_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_centro_medico"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/texto_estadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadio de Fútbol"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_estadio"
        app:layout_constraintStart_toStartOf="@id/btn_estadio"
        app:layout_constraintEnd_toEndOf="@id/btn_estadio"/>

    <ImageButton
        android:id="@+id/btn_centro_medico"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_centro_medico"
        android:contentDescription="Centro Médico"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_to_home"
        app:layout_constraintStart_toEndOf="@id/btn_estadio"
        app:layout_constraintEnd_toStartOf="@id/btn_ciudad_deportiva"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/texto_centro_medico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro Médico"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_centro_medico"
        app:layout_constraintStart_toStartOf="@id/btn_centro_medico"
        app:layout_constraintEnd_toEndOf="@id/btn_centro_medico"/>

    <ImageButton
        android:id="@+id/btn_ciudad_deportiva"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_ciudad_deportiva"
        android:contentDescription="Ciudad Deportiva"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_to_home"
        app:layout_constraintStart_toEndOf="@id/btn_centro_medico"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/texto_ciudad_deportiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad Deportiva"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ciudad_deportiva"
        app:layout_constraintStart_toStartOf="@id/btn_ciudad_deportiva"
        app:layout_constraintEnd_toEndOf="@id/btn_ciudad_deportiva"/>

</androidx.constraintlayout.widget.ConstraintLayout>
