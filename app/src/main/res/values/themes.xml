<resources>
    <!-- Estilo reutilizable para los botones de jugador -->
    <style name="PlayerButton">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">#80000000</item> <!-- semi-transparente negro -->
        <item name="android:textColor">#FFFFFF</item> <!-- texto blanco -->
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!-- Tema principal -->
    <style name="Theme.MagosDelBalon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Quitar ActionBar y pantalla completa -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema sin animaciones -->
    <style name="Theme.MagosDelBalon.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
